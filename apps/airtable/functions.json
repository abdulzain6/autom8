    {
        "name": "AIRTABLE__GET_BASE_SCHEMA",
        "description": "Get the schema of tables in a specific base",
        "tags": [
            "base",
            "table",
            "schema",
            "meta"
        ],
        "visibility": "public",
        "active": true,
        "protocol": "rest",
        "protocol_data": {
            "method": "GET",
            "path": "/meta/bases/{base_id}/tables",
            "server_url": "https://api.airtable.com/v0"
        },
        "parameters": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "object",
                    "description": "Path parameters",
                    "properties": {
                        "base_id": {
                            "type": "string",
                            "description": "ID of the base to retrieve tables from"
                        }
                    },
                    "required": ["base_id"],
                    "visible": ["base_id"],
                    "additionalProperties": false
                },
                "query": {
                    "anyOf": [
                        {
                            "type": "object",
                            "description": "Query parameters",
                            "properties": {
                                "include": {
                                    "anyOf": [
                                        {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "enum": ["visibleFieldIds"]
                                            }
                                        },
                                        { "type": "null" }
                                    ],
                                    "description": "If specified, additional fields to include in the views object response; currently, this list only allows a single literal value 'visibleFieldIds' (for views of type grid only)"
                                }
                            },
                            "required": [],
                            "visible": ["include"],
                            "additionalProperties": false
                        },
                        { "type": "null" }
                    ]
                }
            },
            "required": ["path"],
            "visible": ["path", "query"],
            "additionalProperties": false
        }
    },
    {
        "name": "AIRTABLE__CREATE_TABLE",
        "description": "Create a new table in a specific base",
        "tags": [
            "base",
            "table",
            "create",
            "meta"
        ],
        "visibility": "public",
        "active": true,
        "protocol": "rest",
        "protocol_data": {
            "method": "POST",
            "path": "/meta/bases/{base_id}/tables",
            "server_url": "https://api.airtable.com/v0"
        },
        "parameters": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "object",
                    "description": "Path parameters",
                    "properties": {
                        "base_id": {
                            "type": "string",
                            "description": "ID of the base to create a table in"
                        }
                    },
                    "required": ["base_id"],
                    "visible": ["base_id"],
                    "additionalProperties": false
                },
                "body": {
                    "type": "object",
                    "description": "Table creation parameters",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "Name of the new table"
                        },
                        "description": {
                            "anyOf": [
                                { "type": "string" },
                                { "type": "null" }
                            ],
                            "description": "Description of the new table"
                        },
                        "fields": {
                            "type": "array",
                            "description": "Fields to create in the new table. A list of JSON objects representing the fields in the table.",
                            "items": {
                                "type": "object",
                                "description": "Field definition",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "Name of the field"
                                    },
                                    "description": {
                                        "anyOf": [
                                            { "type": "string" },
                                            { "type": "null" }
                                        ],
                                        "description": "Description of the field"
                                    },
                                    "type": {
                                        "type": "string",
                                        "description": "Type of the field",
                                        "enum": [
                                            "autoNumber", "barcode", "button", "checkbox", "count",
                                            "createdBy", "createdTime", "currency", "date", "dateTime",
                                            "duration", "email", "formula", "lastModifiedBy", "lastModifiedTime",
                                            "lookup", "multilineText", "multipleAttachments", "multipleCollaborators",
                                            "multipleRecordLinks", "multipleSelects", "number", "percent",
                                            "phoneNumber", "rating", "richText", "rollup", "singleCollaborator",
                                            "singleLineText", "singleSelect", "url"
                                        ]
                                    },
                                    "options": {
                                        "type": "object",
                                        "description": "Additional options for the field based on its type. Due to API limitations, this must be an empty object.",
                                        "properties": {},
                                        "additionalProperties": false
                                    }
                                },
                                "required": ["name", "type"],
                                "visible": ["name", "description", "type", "options"],
                                "additionalProperties": false
                            }
                        }
                    },
                    "required": ["name", "fields"],
                    "visible": ["name", "description", "fields"],
                    "additionalProperties": false
                }
            },
            "required": ["path", "body"],
            "visible": ["path", "body"],
            "additionalProperties": false
        }
    },
