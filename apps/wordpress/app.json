{
  "name": "WORDPRESS",
  "display_name": "WordPress.com",
  "logo": "https://raw.githubusercontent.com/abdulzain6/autom8-logos/refs/heads/master/app_logos/wordpress.png",
  "provider": "Automattic",
  "version": "1.0.0",
  "description": "Connect to WordPress.com to manage your sites. This app allows you to create and edit posts, upload media, and manage comments on your WordPress blogs and websites.",
  "security_schemes": {
    "oauth2": {
      "location": "header",
      "name": "Authorization",
      "prefix": "Bearer",
      "client_id": "{{ AIPOLABS_WORDPRESS_CLIENT_ID }}",
      "client_secret": "{{ AIPOLABS_WORDPRESS_CLIENT_SECRET }}",
      "scope": "global",
      "authorize_url": "https://public-api.wordpress.com/oauth2/authorize",
      "access_token_url": "https://public-api.wordpress.com/oauth2/token",
      "refresh_token_url": "https://public-api.wordpress.com/oauth2/token"
    }
  },
  "default_security_credentials_by_scheme": {},
  "categories": [
    "Productivity",
    "Content Management"
  ],
  "visibility": "public",
  "active": true
}
